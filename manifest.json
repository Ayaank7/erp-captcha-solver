{
  "manifest_version": 3,
  "name": "ERP CAPTCHA Solver Pro",
  "version": "2.0",
  "description": "Auto-solves ERP CAPTCHAs with 95%+ accuracy. Educational tool for students.",
  "author": "Ayaan",
  "permissions": ["activeTab"],
  
  "host_permissions": [
    "https://your-erp-domain.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://your-erp-domain.com/*"],
      "js": ["tesseract.min.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "data:image/svg+xml;base64,",
    "48": "data:image/svg+xml;base64,"
  }
}
