{
  "manifest_version": 3,
  "name": "ERP CAPTCHA Solver Pro",
  "version": "3.0.0",
  "description": "Professional CAPTCHA auto-solver with 95%+ accuracy for educational purposes. Powered by advanced OCR technology. Â© 2025 Ayaan",
  "author": "Ayaan",
  "homepage_url": "https://github.com/Ayaank7/erp-captcha-solver",
  "permissions": ["activeTab"],
  
  "host_permissions": [
    "https://your-erp-domain.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://your-erp-domain.com/*"],
      "js": ["tesseract.min.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "images/icon-16.svg",
    "48": "images/icon-48.svg",
    "128": "images/icon-128.svg"
  },
  "minimum_chrome_version": "88",
  "short_name": "CAPTCHA Solver Pro"
}
